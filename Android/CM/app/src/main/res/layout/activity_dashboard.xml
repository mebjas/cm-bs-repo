<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/lbl_name"
                android:textSize="24dp" />

            <Button
                android:layout_alignParentRight="true"
                android:id="@+id/btnLogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dip"
                android:background="@color/bg_register"
                android:text="@string/btn_logout"
                android:textAllCaps="false"
                android:textColor="@color/btn_logut_bg"
                android:textSize="15sp"
                android:padding="0dp"/>

            <Button
                android:id="@+id/btnProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/bg_register"
                android:text="@string/btn_setting"
                android:textAllCaps="false"
                android:textColor="@color/input_login_hint"
                android:textSize="15sp"
                android:padding="0dp"
                android:layout_alignParentTop="true"
                android:layout_marginRight="2dp"
                android:layout_toLeftOf="@+id/btnLogout"
                android:layout_toStartOf="@+id/btnLogout" />
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/SelectCourseTitle"
        android:text="Select Course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="@color/lbl_name"
        android:textSize="14dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignLeft="@+id/linearLayout"
        android:layout_alignStart="@+id/linearLayout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SelectCourseTitle"
        android:orientation="vertical"
        android:gravity="right">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Course Name"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />
        <Button
            android:id="@+id/btnSearch"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:background="@color/bg_register"
            android:text="@string/btn_search"
            android:textAllCaps="false"
            android:textColor="@color/input_login_hint"
            android:textSize="15sp"
            android:padding="0dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="10dp"/>
    </LinearLayout>

